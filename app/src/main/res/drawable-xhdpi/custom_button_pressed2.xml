<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor = "@color/colorPrimary"
                android:centerColor = "#13244B"
                android:endColor ="#13244B"
                android:angle="90"/>
            <corners
                android:radius="23dp"/>
            <stroke
                android:width="2dp"
                android:color="#020A1D"/>
            <padding
                android:left="15dp"
                android:top="2dp"
                android:right="15dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor = "@color/colorPrimary"
                android:centerColor = "#061332"
                android:endColor ="#061332"
                android:angle="90"/>
            <corners
                android:radius="23dp"/>
            <stroke
                android:width="4dp"
                android:color="#020A1D"/>
            <padding
                android:left="15dp"
                android:top="2dp"
                android:right="15dp"
                android:bottom="5dp"/>

        </shape>
    </item>
</selector>